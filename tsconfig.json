{
  "compilerOptions": {
    "target": "ES6",                       
    "module": "commonjs",                   
    "rootDir": "./src",                     
    "outDir": "./dist",                     
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "skipLibCheck": true    ,
    "typeRoots": ["./node_modules/@types", "./src/app/interfaces"]                
  },
  "include": [
    "src/**/*"                               
, ],
  "exclude": [
    "node_modules",                         
    "dist"                                  
  ],
  "files": [
    "./src/app/interfaces/index.d.ts"  
  ]
}